<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/radio"
    android:background="#006670">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Miles"
        android:id="@+id/textView"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="116dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextMiles"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignLeft="@+id/editTextKms"
        android:layout_alignStart="@+id/editTextKms"
        android:width="100dp"
        android:textColor="#ffffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Km"
        android:id="@+id/textView2"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextKms"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="108dp"
        android:layout_marginEnd="108dp"
        android:width="100dp"
        android:textColor="#ffffff"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ConvertKmToMiles"
        android:id="@+id/ConvertKmToMiles"
        android:layout_alignParentBottom="true"
        android:textColor="#bc0099"
        android:layout_alignLeft="@+id/ConvertMilesToKm"
        android:layout_alignStart="@+id/ConvertMilesToKm"
        android:layout_alignRight="@+id/ConvertMilesToKm"
        android:layout_alignEnd="@+id/ConvertMilesToKm" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ConvertMilesToKm"
        android:id="@+id/ConvertMilesToKm"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="56dp"
        android:width="100dp"
        android:textColor="#bc0099"
        android:layout_alignRight="@+id/editTextKms"
        android:layout_alignEnd="@+id/editTextKms"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New RadioButton"
        android:id="@+id/radioButton"
        android:layout_above="@+id/textView2"
        android:layout_alignRight="@+id/editTextKms"
        android:textColor=""/>

</RelativeLayout>
